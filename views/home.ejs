<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/css/home_style.css">
    <script src="https://kit.fontawesome.com/6f0f83005a.js" crossorigin="anonymous"></script>
    <title>nMeet</title>
</head>
<body>
    <div id="header">
        <div id="root-div">
            <div id="left-div">
                <!-- Large Heading with Bold Text -->
                <div id="large-message" class="styled-heading">
                    Seamless Video Connections
                </div>
    
                <!-- Section for Creating and Joining Meetings -->
                <div id="new-meeting-root" class="meeting-container">
                    
                    <!-- New Meeting Button -->
                    <div id="start-meeting" class="button-container">
                        <a href="/room" class="start-meeting-btn">
                            <i class="fas fa-plus"></i> New Meeting
                        </a>
                    </div>
    
                    <!-- Input for Meeting Link -->
                    <div id="enter-meeting-link" class="input-container">
                        <i class="fas fa-keyboard"></i>
                        <input type="text" name="link" placeholder="Enter meeting link" id="meeting-link-text-box" class="input-box">
                    </div>
    
                    <!-- Join Button -->
                    <div id="join-button" class="join-btn">Join</div>
                </div>
            </div>
        </div>
    </div>
    
    
    
</body>
</html>

<script>
    document.getElementById('join-button').addEventListener('click', function() {
        let input = document.getElementById('meeting-link-text-box').value;
        window.location.assign(input);
        document.getElementById('meeting-link-text-box').value = "";
    });
</script>

